@using Snippy.App.Models
@model SnippetInputModel


@Html.AntiForgeryToken()
@Html.ValidationSummary(true)

<div class="form-group">
    @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Code, new { @class = "col-md-2 control-label" })
    @Html.TextAreaFor(x => x.Code, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Code, "", new { @class = "text-danger" })
</div>
<div class="form-group">
    <label class="col-md-2 control-label">Language</label>
    @Html.DropDownListFor(x => x.LanguageId, new SelectList(Model.Languages, "Id", "Name"), htmlAttributes: new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Labels, new { @class = "col-md-2 control-label" })
    @Html.TextBoxFor(x => x.Labels, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Labels, "", new { @class = "text-danger" })
</div>